<% layout("/layouts/boilerplate") %>

    <%- include("../includes/filters.ejs") %>

    <div class="row">
        <% for(list of allListings) { %>
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-4 mt-4">
                <a href="/listings/<%= list._id %>">
                    <div class="card h-100 listing-card">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="..."  style="height: 17rem; object-fit: cover;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= list.title %></b> <br>
                                &#8377; <%= list.price.toLocaleString("en-IN") %>/night
                                <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>


    

