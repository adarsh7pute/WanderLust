<% layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-3">
    <div class="col-6 ">
        <form method="POST" action="/login" novalidate class="needs-validation">
            <h3 class="text-center mb-4">Login for WanderLust</h3>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" class="form-control" type="text" required />
            </div>


            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" class="form-control"  type="password" required />
            </div>
            
            <button type="submit" class="btn w-100" style="background-color: #fe424d;color: white;" >Login</button>

        </form>
    </div>
</div>